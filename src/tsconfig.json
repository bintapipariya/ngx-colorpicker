{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../dist",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "files": [
    "index.ts",
    "lib/formats.ts",
    "lib/helpers.ts",
    "lib/colorpicker.module.ts",
    "lib/colorpicker.service.ts",
    "lib/colorpicker.component.ts",
    "lib/colorpicker.directive.ts"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit" : false,
    "skipTemplateCodegen": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  }
}
